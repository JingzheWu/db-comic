{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNEXT"],
    "module": "commonjs",
    "baseUrl": "./",
    "allowJs": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
